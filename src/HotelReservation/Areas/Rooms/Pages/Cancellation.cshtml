@page
@model HotelReservation.Areas.Rooms.Pages.Cancellation

@{
    Layout = "_Layout";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email" class="form-label"></label>
            </div>
            
            <div class="form-floating">
                <input asp-for="ConfirmationNumber" class="form-control" />
                <label asp-for="ConfirmationNumber" class="form-label"></label>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <button asp-page-handler="OnSubmit" type="submit" class="btn btn-primary">Submit</button>
                <button asp-page-handler="OnCancel" type="submit" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    </div>
</form>