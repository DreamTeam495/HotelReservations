@page
@model HotelReservation.Areas.Rooms.Pages.CustomerInformation

@{
    ViewData["Title"] = "Payment and Guest Details";
}

<h3>@ViewData["Title"]</h3>

<div>
    <div class="col-md-12">
        <b>Total Price: </b> @Model.Price
    </div>
</div>


<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CreditCardNumber" class="form-control" />
                <label asp-for="Input.CreditCardNumber" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CreditCardExpiration" class="form-control" />
                <label asp-for="Input.CreditCardExpiration" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CreditCardCvv" class="form-control" />
                <label asp-for="Input.CreditCardCvv" class="form-label"></label>
            </div>
        </div>
        <button asp-page-handler="OnSubmit" type="submit" class="btn btn-lg btn-primary">Submit</button>
        <button asp-page-handler="OnCancel" type="submit" class="btn btn-lg btn-primary">Cancel</button>
    </div>
</form>