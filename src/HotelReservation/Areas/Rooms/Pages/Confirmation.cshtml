@page
@model HotelReservation.Areas.Rooms.Pages.Confirmation

@{
    ViewData["Title"] = "Confirmation Page";
}

<h3>@ViewData["Title"]</h3>

<div>
    <b>Start Date:</b> @Model.Reserve.StartDate.ToShortDateString()
    <b>End Date:</b> @Model.Reserve.EndDate.ToShortDateString()
</div>

<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<div>
        <img id="typePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Output))">
    </div>*@
        <div>
            <b>Total for </b> 
            <label asp-for="NumberOfDays">@Model.NumberOfDays</label> 
            <b> days is: </b> 
            <label asp-for="Reserve.Price">@Model.Reserve.Price</label>
        </div>
    
        <div>
            <b>Room Number: </b>
            <label asp-for="Reserve.Id">@Model.Reserve.Id</label>
            
            <br/>
            <b>Guest Information: </b>
            <label asp-for="Reserve.Customer.FirstName">@Model.Reserve.Customer.FirstName</label>
            
            <label asp-for="Reserve.Customer.LastName">@Model.Reserve.Customer.LastName</label>
            <br/>
            <b> An email confirmation will be sent shortly to: </b>
            <label asp-for="Reserve.Customer.Email">@Model.Reserve.Customer.Email</label>
        </div>
    </div>
</div>

